<%- include('navbar', { user }); %>
<h1><%= article && article.id ? 'Edit' : 'New' %> Article</h1>
<form method="post" action="<%= article && article.id ? '/articles/' + article.id + '?_method=PUT' : '/articles' %>">
  <label>Title: <input type="text" name="title" value="<%= article ? article.title : '' %>" required></label><br>
  <label>Content:<br>
    <textarea name="content" rows="5" cols="40" required><%= article ? article.content : '' %></textarea>
  </label><br>
  <button type="submit"><%= article && article.id ? 'Update' : 'Create' %></button>
</form>